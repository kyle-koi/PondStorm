<idea-plugin>
    <id>com.pond.pondstorm</id>
    <name>Pond Storm Action</name>
    <version>1.0</version>
    <vendor>PondFocus</vendor>

    <description>
        A simple motivational plugin for IntelliJ.
    </description>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="PondStorm"
                class="com.example.PondAction"
                text="You are POND STORM!"
                description="Prints a motivational tip">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>